{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "es2019", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "typeRoots": [
      "./node_modules/@figma",
      "./node_modules/@types"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules"]
}